version: '3'

services:
    influxdb:
        image: influxdb:2.7
        volumes:
            - /tank/containers/influxdb/data:/var/lib/influxdb2
            - /tank/containers/influxdb/config:/etc/influxdb2
        restart: always
        ports: 
            - "8086:8086"
        environment:
            - DOCKER_INFLUXDB_INIT_MODE=setup
            - DOCKER_INFLUXDB_INIT_USERNAME=admin
            - DOCKER_INFLUXDB_INIT_PASSWORD={{ influxdb_admin_password }}
            - DOCKER_INFLUXDB_INIT_ORG=etnolit
            - DOCKER_INFLUXDB_INIT_BUCKET=default
